{% extends 'base.html.twig' %}

{% block title %}Список заказов{% endblock %}

{% block body %}

{% set json %}
{% include './order/content.json' %}
{% endset %}
    <h4 class="d-flex justify-content-between align-items-center w-100 font-weight-bold py-3 mb-4">
        <div>Заказы</div>
        
        {#<a class="btn btn-primary btn-lg rounded-pill d-block" href="{{ path('app_base_new') }}"><i class="fa fa-plus"></i> Создать заказ</a>#}
    </h4>
<a class="btn btn-primary" href="{{ path('app_order_new', {'json': json}) }}" style="max-width: 200px">Отправить JSON</a>
    <div class="card">
        <div class="card-datatable table-responsive">
        <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Номер</th>
                <th>Сумма</th>
                <th>Действия</th>
            </tr>
        </thead>
                <tbody>
                {% for order in orders %}
                    <tr>
                        <td>{{ order.id }}</td>
                        <td>{{ order.number }}</td>
                        <td>{{ order.amount }}</td>
                        <td align="right">
                            {#<a class="btn btn-info" href="{{ path('app_order_show', {'id': order.id}) }}" title="Посмотреть"><i class="fa fa-eye"></i></a>#}
                            
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">пусто</td>
                    </tr>
                {% endfor %}
                </tbody>
        </table>
        </div>
    </div>

{% endblock %}
