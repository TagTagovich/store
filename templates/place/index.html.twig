{% extends 'base.html.twig' %}

{% block title %}Список областей{% endblock %}

{% block body %}
    <h1>Список областей</h1>
    
    <h4 class="d-flex justify-content-between align-items-center w-100 font-weight-bold py-3 mb-4">
        <div>Области</div>
    {#<a class="btn btn-primary btn-lg rounded-pill d-block" href="{{ path('place_setter', {'place': 2} ) }}"><i class="fa fa-plus"></i> Set</a>#}
    </h4>
    <div class="card">
        <div class="card-datatable table-responsive">
        <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for place in places %}
         
            <tr>
                <td>{{ place.id }}</td>
                <td>{{ place.name }}</td>
                <td>
                    {#<a class="btn btn-success" href="{{ path('app_place_edit', {'base': base, 'id': place.id}) }}" title="Изменить"><i class="fa fa-pencil-alt"></i></a>#}
                    <a class="btn btn-primary" href="{{ path('app_overlace_edit', {id: place.id}) }}" id="saveOverlace" title="Определить правила наложения макета"><i class="fa fa-file"></i></a>
                </td>
            </tr>
        {% else %}

            <tr>
                <td colspan="5">записей не найдено</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}
