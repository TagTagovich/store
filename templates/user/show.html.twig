{% extends 'base.html.twig' %}

{% block title %}Пользователь #{{ user.id }}{% endblock %}

{% block body %}
    <h4 class="d-flex justify-content-between align-items-center w-100 font-weight-bold py-3 mb-4">
        <div><a href="{{ path('user_index') }}">Пользователи</a> / Пользователь #{{ user.id }}</div>
    </h4>

	<div class="card mb-3 mt-3">
		<div class="card-body">
		    <table class="table">
		        <tbody>
		            <tr>
		                <th>Id</th>
		                <td>{{ user.id }}</td>
		            </tr>
		            <tr>
		                <th>Email</th>
		                <td>{{ user.email }}</td>
		            </tr>
		        </tbody>
		    </table>
			<a class="btn btn-primary" href="{{ path('user_edit', {'id': user.id}) }}" style="max-width: 200px">Изменить</a>
			<a class="btn btn-danger" href="{{ path('user_delete', {'id': user.id}) }}"><i class="fa fa-times"></i> Удалить</a>
			<a class="btn btn-default" href="{{ path('user_index') }}">Отмена</a>

		</div>
	</div>
{% endblock %}
