{% extends 'base.html.twig' %}

{% block title %}Напомнить пароль{% endblock %}

{% block body %}
    <div class="authentication-wrapper authentication-1 px-4">
	    <div class="authentication-inner py-5">
	
			<!-- Logo -->
			<div class="d-flex justify-content-center align-items-center">
				<div class="ui-w-120">
				  <div class="text-center" style="width: 100%">
			            
				  </div>
				</div>
			</div>
			<!-- / Logo -->
		    {% if error|default(false) %}
		        <div class="alert alert-danger">
		            {{ error.messageKey|trans(error.messageData, 'security') }}
		        </div>
		    {% endif %}
	        {{ form_start(form, {'attr' : { id : 'loginform', 'class' : 'my-5' }}) }}
	        <h3 class="text-center m-b-20">Напомнить пароль</h3>
	        <div class="form-group">
	        	{{ form_widget(form.email) }}
	        </div>
	        {{ form_row(form.submit, {'attr' : { 'class' : 'btn btn-block btn-lg btn-primary btn-rounded' }} ) }}
	        {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
